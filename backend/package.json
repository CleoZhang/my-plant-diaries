{
  "name": "my-plant-diaries-backend",
  "version": "1.0.0",
  "description": "Backend for My Plant Diaries app",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "seed-admin": "ts-node src/scripts/seedAdminUser.ts",
    "migrate-photos": "ts-node src/utils/migratePhotos.ts",
    "migrate-photo-paths": "ts-node src/scripts/migratePhotoPaths.ts",
    "migrate-photo-files": "ts-node src/scripts/migratePhotoFiles.ts",
    "cleanup-orphaned-photos": "ts-node src/scripts/cleanupOrphanedPhotos.ts",
    "import-updates-notion": "ts-node src/scripts/importPlantUpdates.ts",
    "restore-db-notion": "ts-node src/scripts/restoreDatabase.ts && npm run import-updates-notion"
  },
  "keywords": [
    "plants",
    "tracking",
    "diary"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "csv-parse": "^6.1.0",
    "csv-parser": "^3.2.0",
    "dotenv": "^16.3.1",
    "exif-parser": "^0.1.12",
    "express": "^4.18.2",
    "heic-convert": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.6"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/heic-convert": "^2.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.9.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
